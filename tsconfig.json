{
    "compilerOptions": {
        "target": "es6",

        "lib": ["dom", "es6", "dom.iterable", "scripthost"],
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": ".",

        "removeComments": true,

        "noEmitOnError": true,

        "strict": true,

        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,

        "moduleResolution": "node",

        "esModuleInterop": true
    },
    "include": ["./src", "./jest-setup.ts"],
    "exclude": ["node_modules"]
}
